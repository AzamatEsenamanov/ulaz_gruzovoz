<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".details.DetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/title_detail"
            android:fontFamily="serif"
            app:navigationIcon="@drawable/ic_close"
            app:titleTextColor="@color/colorAccent">

        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/icons_linearLayout"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="110dp"
                app:srcCompat="@drawable/ic_car">
            </ImageView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/ic_location_from">
            </ImageView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/ic_location_to">
            </ImageView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/ic_price">
            </ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/ic_furniture">
            </ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/ic_description_24px_1">
            </ImageView>

        </LinearLayout>


    <LinearLayout
        android:id="@+id/text_linearLayout"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:textSize="15dp"
            android:text="Спринтер"
            android:textColor="@color/blackTextColor">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:textSize="15dp"
            android:text="ул. Байтик-Баатыра, 70"
            android:textColor="@color/blackTextColor">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:textSize="15dp"
            android:text="ул. Байтик-Баатыра, 70"
            android:textColor="@color/blackTextColor">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:textSize="15dp"
            android:text="Спринтер"
            android:textColor="@color/blackTextColor">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="15dp"
            android:text="5000 сом + 10%"
            android:textColor="@color/blackTextColor">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:textSize="15dp"
            android:text="Хочу чтобы все четко доставили"
            android:textColor="@color/blackTextColor">

        </TextView>

    </LinearLayout>


</LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="215dp">

        <Button
            android:id="@+id/callButton"
            android:layout_width="244dp"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="40dp"
            android:fontFamily="serif"
            android:text="Позвонить"
            android:visibility="gone"
            android:textColor="@color/colorAccent"
            android:background="@drawable/call_rounded_button">
        </Button>

        <Button
            android:id="@+id/accept"
            android:layout_width="244dp"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="130dp"
            android:fontFamily="serif"
            android:text="Принять"
            android:textColor="@color/blackTextColor"
            android:background="@drawable/yellow_rounded_button">
        </Button>



        <Button
            android:id="@+id/finish"
            android:layout_width="244dp"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="130dp"
            android:fontFamily="serif"
            android:text="Завершить"
            android:textColor="@color/colorAccent"
            android:visibility="gone"
            android:background="@drawable/red_rounded_button">
        </Button>

    </RelativeLayout>



</LinearLayout>
