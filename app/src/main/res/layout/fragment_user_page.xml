<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/historyfrgment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".user_page.UserPageFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/historyBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/user_page_app_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:addStatesFromChildren="false"
            app:title="@string/title_user_page"
            app:menu="@menu/menu_main"
            app:titleTextColor="@color/colorAccent"
            app:titleTextAppearance="@style/ToolbarTheme">

        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:background="@color/colorPrimaryBackgroundLight"
        >

        <TextView
            android:id="@+id/name_user_page"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/roboto_slab"
            android:text="Ташматов Азамат"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/phone_number_user_page"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/roboto_slab"
            android:text="+996 555 555 555"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_user_page" />

        <TextView
            android:id="@+id/balance_user_page"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25.5dp"
            android:fontFamily="@font/roboto_slab"
            android:text="1000"
            android:textColor="@color/colorAccent"
            android:textSize="60sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phone_number_user_page" />

        <TextView
            android:id="@+id/car_name_user_page"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="115dp"
            android:layout_marginEnd="21dp"
            android:fontFamily="@font/roboto_slab"
            android:text="ЗИЛ(Голубой)"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cane_number_user_page"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginEnd="58dp"
            android:fontFamily="@font/roboto_slab"
            android:text="B7656AK"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/car_name_user_page" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:tabIndicatorHeight="4dp"
        android:background="@color/colorUserToolbar"
        app:tabIndicatorColor="@color/colorAccent"
        app:tabTextColor="@color/bottom_nav_icons"
        app:tabTextAppearance="@style/TabLayoutTheme">

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:background="@color/backgroundColorPrimary"
        android:layout_height="match_parent">

    </androidx.viewpager.widget.ViewPager>

</LinearLayout>